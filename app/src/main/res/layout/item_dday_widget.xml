<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:paddingVertical="6dp"
    android:gravity="center_vertical"
    android:background="@drawable/widget_item_rounded_bg">

    <!-- 카테고리 아이콘 (이모지) - 컴팩트 크기 -->
    <FrameLayout
        android:id="@+id/item_icon_card"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/widget_icon_rounded_bg">

        <TextView
            android:id="@+id/item_category_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp" />
    </FrameLayout>

    <!-- 내용 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="6dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#DD000000"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium" />

        <!-- 날짜 + 메모 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.05.28"
                android:textSize="11sp"
                android:textColor="#88000000" />

            <TextView
                android:id="@+id/item_memo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="메모"
                android:textSize="11sp"
                android:textColor="#77000000"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- D-Day 텍스트 -->
    <TextView
        android:id="@+id/item_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-3"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#FF1A237E"
        android:fontFamily="sans-serif-medium" />

    <!-- 체크박스 - 터치 영역 확대 (48dp 최소 권장) -->
    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:focusable="false"
        android:clickable="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleX="1.1"
        android:scaleY="1.1" />
</LinearLayout>
