<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <!-- 부팅 완료 시 알람 재설정을 위한 권한 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 정확한 알람을 위한 권한 (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- 알림 권한 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 진동 권한 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- ✅ 메인 액티비티 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ D-Day 위젯 Provider 등록 -->
        <receiver
            android:name=".ddaywidget.DdayWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.myapplication.ACTION_CHECKBOX_CLICK" />
                <action android:name="com.example.myapplication.ACTION_MIDNIGHT_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/dday_widget_info" />
        </receiver>

        <!-- ✅ 부팅 시 자정 알람 재설정용 Receiver -->
        <receiver
            android:name=".ddaywidget.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- ✅ 알림용 Receiver -->
        <receiver
            android:name=".ddaywidget.NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.myapplication.ACTION_SHOW_NOTIFICATION" />
                <action android:name="com.example.myapplication.ACTION_DAILY_CHECK" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>


        <!-- ✅ D-Day 위젯 RemoteViewsService 등록 -->
        <service
            android:name=".ddaywidget.DdayWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

    </application>

</manifest>
